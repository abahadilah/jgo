<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_search_location_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_32dp"
        style="@style/H1"
        android:textColor="@color/colorNeutral70"
        android:text="@string/map_search_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        style="@style/P1"
        android:gravity="center"
        android:textColor="@color/colorNeutral40"
        android:text="@string/map_search_empty_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <id.co.edtslib.edtsds.ButtonView
        android:id="@+id/bvSubmit"
        app:size="medium"
        app:variant="primary"
        android:text="@string/map_choose_via_map"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.appcompat.widget.LinearLayoutCompat>