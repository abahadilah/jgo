<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@drawable/bg_menu"
        android:layout_weight="1"
        android:layout_height="0dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/dimen_24dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/H2"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:textColor="@color/colorNeutral70"
                    android:text="@string/order"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/dimen_4dp"
                    app:cardBackgroundColor="#FFF0E6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingStart="@dimen/dimen_8dp"
                        android:paddingEnd="@dimen/dimen_8dp"
                        android:paddingTop="@dimen/dimen_2dp"
                        android:paddingBottom="@dimen/dimen_2dp"
                        android:id="@+id/tvStatus"
                        style="@style/H4"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:paddingStart="@dimen/dimen_12dp"
                    android:paddingEnd="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/lbDOName"
                        style="@style/B1"
                        android:text="@string/order_do_name"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbDOName"
                        style="@style/B1"
                        android:id="@+id/tvDOName"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbDOName"
                        android:id="@+id/lbDate"
                        style="@style/B1"
                        android:text="@string/order_created_date"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbDate"
                        style="@style/B1"
                        android:id="@+id/tvDate"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbDate"
                        android:id="@+id/lbProduct"
                        style="@style/B1"
                        android:text="@string/order_product"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbProduct"
                        style="@style/B1"
                        android:id="@+id/tvProduct"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbProduct"
                        android:id="@+id/lbDimension"
                        style="@style/B1"
                        android:text="@string/order_dimension"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbDimension"
                        style="@style/B1"
                        android:id="@+id/tvDimension"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbDimension"
                        android:id="@+id/lbWeight"
                        style="@style/B1"
                        android:text="@string/order_weight"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbWeight"
                        style="@style/B1"
                        android:id="@+id/tvWeight"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/H2"
                android:id="@+id/lbDeliveryTitle"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textColor="@color/colorNeutral70"
                android:text="@string/order_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvDeliveryTitle"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:paddingStart="@dimen/dimen_12dp"
                    android:paddingEnd="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/lbPickupName"
                        style="@style/B1"
                        android:text="@string/order_pickup_name"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbPickupName"
                        style="@style/B1"
                        android:id="@+id/tvPickupName"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbPickupName"
                        android:id="@+id/lbPickupCity"
                        style="@style/B1"
                        android:text="@string/order_pickup_city"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbPickupCity"
                        style="@style/B1"
                        android:id="@+id/tvPickupCity"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbPickupCity"
                        android:id="@+id/lbRecipientName"
                        style="@style/B1"
                        android:text="@string/order_recipient_name"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbRecipientName"
                        style="@style/B1"
                        android:id="@+id/tvRecipientName"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbRecipientName"
                        android:id="@+id/lbRecipientCity"
                        style="@style/B1"
                        android:text="@string/order_recipient_city"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbRecipientCity"
                        style="@style/B1"
                        android:id="@+id/tvRecipientCity"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lbRecipientCity"
                        android:id="@+id/lbDistance"
                        style="@style/B1"
                        android:text="@string/order_distance"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbDistance"
                        style="@style/B1"
                        android:id="@+id/tvDistance"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/H2"
                android:id="@+id/lbDeliveryVehicleTitle"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textColor="@color/colorNeutral70"
                android:text="@string/order_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvDeliveryVehicle"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:paddingStart="@dimen/dimen_12dp"
                    android:paddingEnd="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/lbDriverName"
                        style="@style/B1"
                        android:text="@string/order_driver_name"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbDriverName"
                        app:layout_constraintStart_toEndOf="@id/lbDriverName"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:gravity="end"
                        style="@style/B1"
                        android:id="@+id/tvDriverName"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDriverName"
                        android:id="@+id/lbDriverPhone"
                        style="@style/B1"
                        android:text="@string/order_driver_phone"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbDriverPhone"
                        app:layout_constraintStart_toEndOf="@id/lbDriverPhone"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:gravity="end"
                        style="@style/B1"
                        android:id="@+id/tvDriverPhone"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dimen_12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDriverPhone"
                        android:id="@+id/lbVehicle"
                        style="@style/B1"
                        android:text="@string/order_vehicle"
                        android:textColor="@color/colorNeutral50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lbVehicle"
                        app:layout_constraintStart_toEndOf="@id/lbVehicle"
                        android:gravity="end"
                        style="@style/B1"
                        android:id="@+id/tvVehicle"
                        android:textColor="@color/colorNeutral70"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/H2"
                android:id="@+id/lbDeliveryCostTitle"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textColor="@color/colorNeutral70"
                android:text="@string/order_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvDeliveryCost"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimen_12dp"
                    android:paddingEnd="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/costRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="@drawable/bg_menu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_12dp" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/lbTotal"
                            style="@style/H2"
                            android:text="@string/order_total"
                            android:textColor="@color/colorNeutral50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <androidx.appcompat.widget.AppCompatTextView
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/lbTotal"
                            style="@style/H2"
                            android:id="@+id/tvTotal"
                            android:textColor="@color/colorNeutral70"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="@dimen/dimen_12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTotal"
                            android:id="@+id/lbInvoice"
                            style="@style/H2"
                            android:text="@string/order_invoice_no"
                            android:textColor="@color/colorNeutral50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <id.co.edtslib.edtsds.UnderlineTextView
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/lbInvoice"
                            style="@style/H2"
                            android:id="@+id/tvInvoice"
                            android:textColor="@color/colorPrimary30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>