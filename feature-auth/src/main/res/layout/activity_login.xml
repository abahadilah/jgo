<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_72dp"
        android:text="@string/login_title"
        style="@style/D2"
        android:textColor="@color/colorNeutral70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:gravity="center"
        android:text="@string/login_desc"
        style="@style/P1"
        android:textColor="@color/colorNeutral50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <id.co.edtslib.edtsds.textfield.TextFieldView
        android:id="@+id/etPhone"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/chip_dimen_16dp"
        android:layout_marginEnd="@dimen/chip_dimen_16dp"
        android:layout_width="0dp"
        app:inputType="text"
        app:imeOptions="done"
        android:hint="@string/login_phone_no"
        app:expandedHintEnabled="false"
        app:placeholderText="@string/login_phone_no_hint"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_height="wrap_content" />
    <id.co.edtslib.edtsds.textfield.TextFieldView
        android:id="@+id/etPassword"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintStart_toStartOf="@id/etPhone"
        app:layout_constraintEnd_toEndOf="@id/etPhone"
        app:expandedHintEnabled="false"
        android:hint="@string/auth_phone_password"
        app:placeholderText="@string/auth_phone_password_hint"
        app:errorIconDrawable="@null"
        app:errorTextColor="@color/colorSupportError"
        app:inputType="password"
        app:imeOptions="done"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <id.co.edtslib.edtsds.ButtonView
        android:id="@+id/bvSubmit"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="@id/etPhone"
        app:layout_constraintEnd_toEndOf="@id/etPhone"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/enter"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <id.co.edtslib.edtsds.UnderlineTextView
        android:id="@+id/tvPriceCheck"
        android:text="@string/login_check_price"
        android:textColor="@color/colorPrimary30"
        style="@style/H2"
        android:padding="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/bvSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVersion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/B1"
        android:textColor="@color/colorNeutral50"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>