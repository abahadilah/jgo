<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_12dp"
    android:paddingBottom="@dimen/dimen_16dp"
    android:background="@drawable/bg_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/H2"
        android:textColor="@color/colorNeutral70"
        android:id="@+id/tvTitle"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/B2"
        android:textColor="@color/colorNeutral50"
        android:id="@+id/tvPhone"
        app:drawableStartCompat="@drawable/ic_call"
        app:drawableTint="@color/colorPrimary30"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:drawablePadding="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/B2"
        app:drawableStartCompat="@drawable/ic_email"
        android:drawablePadding="@dimen/dimen_16dp"
        android:textColor="@color/colorNeutral50"
        android:id="@+id/tvEmail"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/B2"
        app:drawableStartCompat="@drawable/ic_location_pin"
        android:drawablePadding="@dimen/dimen_16dp"
        android:textColor="@color/colorNeutral50"
        android:id="@+id/tvAddress"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>